# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{c,h}]
indent_size = 2
indent_style = space

[spec.lua]
trim_trailing_whitespace = false

[*.lua]
indent_size = 2
indent_style = space

[*.md]
indent_style = space
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.tmpl]
insert_final_newline = false

[*.{css,js}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
